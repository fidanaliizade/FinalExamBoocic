@using FinalExamMVCProject.Models;
@model List<Service>

<!-- Begin Page Content -->
<div class="container-fluid">
<a  class="btn btn-primary" style="margin-right:90%" asp-area="" asp-controller="Home" asp-action="Index" >Home</a>
<a  class="btn btn-primary" style="margin-left:90%" asp-controller="Services" asp-action="Create" >Create</a>

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary"> Services DataTables </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Image</th>
                            <th>Action</th>
                           
                        </tr>
                    </thead>
             
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td >
                                <div style="width:100px">
                                        <img src="~/Upload/Service/@item.ImgUrl" width="100%" />
                                </div>

                                
                            </td>
                            <td>
                                    <a class="btn btn-secondary" asp-controller="Services" asp-action="Update"asp-route-id="@item.Id">
                                  Update
                              </a>
                               <a class="btn btn-danger" asp-controller="Services"  asp-action="Delete" asp-route-id="@item.Id">
                                   Delete
                               </a>
                            </td>
                            
                            
                        </tr>
                            
                        }
             
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
            </div>
<!-- End of Main Content -->